{
  "name": "kukla-integration-service",
  "version": "0.0.1",
  "private": true,
  "description": "Adobe Commerce integration service for product data export",
  "dependencies": {
    "@adobe/aio-cli": "^10.3.4",
    "@adobe/aio-sdk": "^6",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.4.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@openwhisk/wskdebug": "^1.3.0",
    "@vitejs/plugin-legacy": "^6.1.1",
    "axios": "^1.9.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.0",
    "markdownlint-cli": "^0.45.0",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "tree-kill": "^1.2.2",
    "vite": "^6.3.5"
  },
  "scripts": {
    "start": "node scripts/dev.js",
    "start:ui": "node scripts/dev.js --ui-only",
    "start:api": "node scripts/dev.js --api-only",
    "deploy": "node scripts/deploy.js",
    "deploy:web": "node scripts/deploy.js --web-only",
    "deploy:actions": "node scripts/deploy.js --actions-only",
    "test:perf": "node scripts/test-performance.js --env local",
    "test:perf:deploy": "node scripts/test-performance.js --env deployed",
    "test:api:products": "node scripts/test-api.js --endpoint get-products",
    "test:api:products:verbose": "node scripts/test-api.js --endpoint get-products --verbose",
    "test:api:browse": "node scripts/test-api.js --endpoint browse-files",
    "test:api:browse:verbose": "node scripts/test-api.js --endpoint browse-files --verbose",
    "test:api:download": "node scripts/test-api.js --endpoint download-file",
    "test:api:download:verbose": "node scripts/test-api.js --endpoint download-file --verbose",
    "test:all": "npm run test:api:products && npm run test:api:browse && npm run test:api:download",
    "test:all:verbose": "npm run test:api:products:verbose && npm run test:api:browse:verbose && npm run test:api:download:verbose"
  },
  "engines": {
    "node": ">=18"
  },
  "aio-app-builder-templates": [
    "@adobe/generator-add-action-generic"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ]
  }
}
