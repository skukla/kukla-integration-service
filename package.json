{
  "name": "kukla-integration-service",
  "version": "0.0.1",
  "private": true,
  "description": "Adobe Commerce integration service for product data export",
  "dependencies": {
    "@adobe/aio-sdk": "^6",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.4.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.7.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@openwhisk/wskdebug": "^1.3.0",
    "@vitejs/plugin-legacy": "^6.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^29",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.0",
    "markdownlint-cli": "^0.45.0",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "vite": "^6.3.5"
  },
  "scripts": {
    "start": "concurrently \"npm run dev:ui\" \"npm run dev:actions\"",
    "start:bg": "./scripts/run-background.sh",
    "dev:ui": "vite --port 3000",
    "dev:actions": "aio app dev",
    "build": "vite build",
    "clean": "rm -rf dist .parcel-cache",
    "test": "jest",
    "test:api": "./scripts/test-api.sh --env dev",
    "test:api:help": "./scripts/test-api.sh --help",
    "test:perf:local": "node scripts/test-performance.js --env local",
    "test:perf:prod": "node scripts/test-performance.js --env deployed",
    "test:perf:prod:small": "node scripts/test-performance.js --env deployed --scenario small",
    "test:perf:prod:medium": "node scripts/test-performance.js --env deployed --scenario medium",
    "test:perf:prod:large": "node scripts/test-performance.js --env deployed --scenario large",
    "test:perf:help": "node scripts/test-performance.js --help",
    "test:perf:small": "node scripts/test-performance.js --env local --scenario small",
    "test:perf:medium": "node scripts/test-performance.js --env local --scenario medium",
    "test:perf:large": "node scripts/test-performance.js --env local --scenario large",
    "deploy": "npm run clean && npm run build && aio app deploy",
    "deploy:web": "npm run build && aio app deploy --no-actions",
    "deploy:actions": "aio app deploy --no-web-assets",
    "deploy:prepare": "node scripts/remove-debug.js",
    "logs": "cat dev.log",
    "logs:clear": "echo \"\" > dev.log",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "prebuild": "node scripts/generate-runtime-config.js",
    "predev": "node scripts/generate-runtime-config.js",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "husky"
  },
  "engines": {
    "node": ">=18"
  },
  "aio-app-builder-templates": [
    "@adobe/generator-add-action-generic"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  }
}
