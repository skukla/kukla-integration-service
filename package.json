{
  "name": "kukla-integration-service",
  "version": "0.0.1",
  "private": true,
  "description": "Adobe Commerce integration service for product data export",
  "dependencies": {
    "@adobe/aio-cli": "^10.3.4",
    "@adobe/aio-lib-files": "^4",
    "@adobe/aio-sdk": "^6",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@openwhisk/wskdebug": "^1.3.0",
    "@vitejs/plugin-legacy": "^6.1.1",
    "axios": "^1.9.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.0",
    "markdownlint-cli": "^0.45.0",
    "ora": "^5.4.1",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "tree-kill": "^1.2.2",
    "vite": "^6.3.5"
  },
  "scripts": {
    "start": "node scripts/dev.js",
    "start:ui": "node scripts/dev.js --ui-only",
    "start:api": "node scripts/dev.js --api-only",
    "clean": "rm -rf dist .parcel-cache",
    "predeploy": "npm run clean",
    "deploy": "node scripts/deploy.js --env production",
    "deploy:staging": "node scripts/deploy.js --env staging",
    "deploy:production": "node scripts/deploy.js --env production",
    "deploy:web": "node scripts/deploy.js --env production --web-only",
    "deploy:web:staging": "node scripts/deploy.js --env staging --web-only",
    "deploy:actions": "node scripts/deploy.js --env production --actions-only",
    "deploy:actions:staging": "node scripts/deploy.js --env staging --actions-only",
    "test:action": "node scripts/test-action.js",
    "test:perf": "node scripts/test-performance.js --env local",
    "test:perf:deploy": "node scripts/test-performance.js --env deployed"
  },
  "engines": {
    "node": ">=18"
  },
  "aio-app-builder-templates": [
    "@adobe/generator-add-action-generic"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ]
  }
}
