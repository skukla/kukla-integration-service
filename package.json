{
  "name": "kukla-integration-service",
  "version": "0.0.1",
  "private": true,
  "description": "Adobe Commerce integration service for product data export",
  "dependencies": {
    "@adobe/aio-cli": "^10.3.4",
    "@adobe/aio-lib-files": "^4",
    "@adobe/aio-sdk": "^6",
    "@aws-sdk/client-s3": "^3.825.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "lodash.merge": "^4.6.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.0",
    "markdownlint-cli": "^0.45.0",
    "ora": "^5.4.1",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "start": "node scripts/build.js && aio app deploy",
    "build": "node scripts/build.js && aio app build",
    "build:config": "node scripts/generate-frontend.js",
    "build:mesh": "node scripts/generate-frontend.js --mesh-only",
    "validate": "node scripts/test-schemas.js --quiet",
    "deploy": "node scripts/deploy.js",
    "deploy:prod": "node scripts/deploy.js --workspace=Production",
    "deploy:mesh": "node scripts/update-mesh.js",
    "deploy:mesh:prod": "node scripts/update-mesh.js --prod",
    "clean": "rm -rf dist",
    "test:api": "node scripts/test-api.js",
    "test:action": "node scripts/test-action.js",
    "test:schemas": "node scripts/test-schemas.js",
    "test:perf": "node scripts/test-performance.js --env staging",
    "test:perf:prod": "node scripts/test-performance.js --env prod",
    "test:perf:list": "node scripts/test-performance.js --list",
    "test:perf:analysis": "node scripts/test-performance.js --analysis",
    "test:perf:compare": "node scripts/test-performance.js --scenario rest-vs-mesh",
    "test:perf:mesh": "node scripts/test-performance.js --scenario mesh-analysis --analysis",
    "test:perf:batch": "node scripts/test-performance.js --scenario mesh-batching",
    "build:mesh-resolver": "node scripts/generate-mesh-resolver.js",
    "build:mesh-resolver:force": "node scripts/generate-mesh-resolver.js --force",
    "build:mesh-resolver:check": "node scripts/generate-mesh-resolver.js --verbose"
  },
  "engines": {
    "node": ">=18"
  },
  "aio-app-builder-templates": [
    "@adobe/generator-add-action-generic"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ]
  }
}
