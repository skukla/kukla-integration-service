{
  "source": "Inventory",
  "operations": [
    {
      "type": "Query",
      "field": "inventory_list",
      "path": "/rest/V1/stockItems",
      "method": "GET",
      "description": "Get paginated list of inventory items",
      "requestSample": {
        "searchCriteria": {
          "pageSize": 50,
          "currentPage": 1
        }
      },
      "responseFields": [
        "items",
        "total_count",
        "search_criteria"
      ],
      "endpoint": "https://citisignal-com774.adobedemo.com/rest/V1/stockItems"
    },
    {
      "type": "Query",
      "field": "inventory_by_sku",
      "path": "/rest/V1/stockItems/{sku}",
      "method": "GET",
      "description": "Get inventory for specific SKU",
      "requestSample": {
        "sku": "sample-product-sku"
      },
      "responseFields": [
        "item_id",
        "product_id",
        "stock_id",
        "qty",
        "is_in_stock",
        "is_qty_decimal"
      ],
      "endpoint": "https://citisignal-com774.adobedemo.com/rest/V1/stockItems/{sku}"
    },
    {
      "type": "Query",
      "field": "inventory_search",
      "path": "/rest/V1/stockItems",
      "method": "GET",
      "description": "Search inventory with filters",
      "requestSample": {
        "searchCriteria": {
          "filterGroups": [
            {
              "filters": [
                {
                  "field": "is_in_stock",
                  "value": "true",
                  "conditionType": "eq"
                }
              ]
            }
          ],
          "pageSize": 50,
          "currentPage": 1
        }
      },
      "responseFields": [
        "items",
        "total_count",
        "search_criteria"
      ],
      "endpoint": "https://citisignal-com774.adobedemo.com/rest/V1/stockItems"
    }
  ],
  "authentication": "Admin Token",
  "primaryKey": "item_id",
  "responseType": "InventoryResponse"
}