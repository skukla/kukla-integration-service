{
  "meshConfig": {
    "sources": [
      {
        "name": "commercerest",
        "handler": {
          "openapi": {
            "source": "https://citisignal-com774.adobedemo.com/rest/all/schema?services=all",
            "operationHeaders": {
              "Authorization": "Bearer {context.headers['x-commerce-admin-token']}",
              "Content-Type": "application/json"
            }
          }
        }
      }
    ],
    "additionalResolvers": [
      "./src/mesh/resolvers/utils.js",
      "./src/mesh/resolvers/operations.js",
      "./src/mesh/resolvers/workflows.js",
      "./src/mesh/resolvers/products.js"
    ],
    "additionalTypeDefs": [
      "./src/mesh/schema/productInventory.graphql",
      "./src/mesh/schema/productCategory.graphql",
      "./src/mesh/schema/productImage.graphql",
      "./src/mesh/schema/mediaGalleryEntry.graphql",
      "./src/mesh/schema/productsPerformance.graphql",
      "./src/mesh/schema/enrichedProduct.graphql",
      "./src/mesh/schema/productsResponse.graphql",
      "./src/mesh/schema/query.graphql"
    ]
  }
}
